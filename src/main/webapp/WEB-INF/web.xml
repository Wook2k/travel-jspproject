<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Welcome File List: 기본적으로 접근할 파일 설정 -->
    <welcome-file-list>
        <welcome-file>Home.jsp</welcome-file> <!-- 기본 홈 페이지 설정 -->
    </welcome-file-list>

    <!-- 서블릿 매핑 (필요한 경우 서블릿을 매핑) -->
    <servlet>
        <servlet-name>MyServlet</servlet-name> <!-- 서블릿 이름 -->
        <servlet-class>com.example.MyServlet</servlet-class> <!-- 서블릿 클래스 -->
    </servlet>

    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/myServlet</url-pattern> <!-- 서블릿이 처리할 URL 패턴 -->
    </servlet-mapping>

    <!-- 서블릿 예시 끝 -->

</web-app>
